{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "vite/client"]
  },
  "include": [
    "src/config/**/*",
    "src/utils/**/*",
    "src/api/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/pages/**/*",
    "src/components/**/*",
    "src/data/**/*",
    "src/main.tsx",
    "src/App.tsx",
    "src/vite-env.d.ts"
  ]
}